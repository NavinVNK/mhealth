<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:padding="10dp"

    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_gravity="center|fill"
    android:orientation="vertical"
    >
    <TextView

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#2FE9D6"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:text="Report Symptoms" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="80dp"
        android:layout_height="66dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/tbcough50" >
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/data1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#EF3F6F"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Coughing that lasts for three days"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report to contact person"
            android:textColor="#ffffff"
            android:buttonTint="#F8F9C8"
            android:id="@+id/checkBox1" />

        <TextView
            android:id="@+id/data3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="#ffffff"
            android:typeface="sans" />

        <TextView
            android:id="@+id/data4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:typeface="sans" />
    </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView

            android:layout_width="80dp"
            android:layout_height="66dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/coughblood50" >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#EF3F6F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Coughing up blood"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report to contact person"
                android:textColor="#ffffff"
                android:buttonTint="#F8F9C8"
                android:id="@+id/checkBox3" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:typeface="sans" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:typeface="sans" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView

            android:layout_width="80dp"
            android:layout_height="66dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/tbchestpain50" >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#EF3F6F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Chest pain, pain with breathing"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report to contact person"
                android:textColor="#ffffff"
                android:buttonTint="#F8F9C8"
                android:id="@+id/checkBox4" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:typeface="sans" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:typeface="sans" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView

            android:layout_width="80dp"
            android:layout_height="66dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/tbweightloss50" >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#EF3F6F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Unintentional weight loss"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report to contact person"
                android:textColor="#ffffff"
                android:buttonTint="#F8F9C8"
                android:id="@+id/checkBox5" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:typeface="sans" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:typeface="sans" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView

            android:layout_width="80dp"
            android:layout_height="66dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/tbfatigue50" >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#EF3F6F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Fatigue"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report to contact person"
                android:textColor="#ffffff"
                android:buttonTint="#F8F9C8"
                android:id="@+id/checkBox6" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:typeface="sans" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:typeface="sans" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView

            android:layout_width="80dp"
            android:layout_height="66dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/tbnight50" >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#EF3F6F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Fever and night sweats"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report to contact person"
                android:textColor="#ffffff"
                android:buttonTint="#F8F9C8"
                android:id="@+id/checkBox2" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:typeface="sans" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:typeface="sans" />
        </LinearLayout>
    </LinearLayout>



    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/b1"
        android:background="@drawable/custom_button"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        />
</LinearLayout>

</ScrollView>